@using Application.Models_DB
@model IEnumerable<ProductResponseModel2>

@{
    bool isLoginPage = ViewBag.IsLoginPage ?? false;
    bool background_image = ViewBag.background_image ?? false;
}

<!doctype html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - Barber</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Include CSS files -->
    <link href="~/Templete_XX/https://fonts.googleapis.com/css?family=DM+Sans:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Templete_XX/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/Templete_XX/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Templete_XX/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Templete_XX/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/Templete_XX/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Templete_XX/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Templete_XX/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/Templete_XX/css/aos.css">
    <link rel="stylesheet" href="~/ServiceStile.css">
    <link rel="stylesheet" href="~/Templete_XX/css/style.css">
    <link rel="stylesheet" href="~/css/ProductSale.css">
</head>
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
    <div class="site-wrap" id="home-section">
        <!-- Include header -->
        <header class="site-navbar site-navbar-target" role="banner">
            <div class="container">
                <div class="row align-items-center position-relative">
                    <div class="col-9 text-right">
                        <!-- Navigation menu -->
                        <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                            <ul class="site-menu main-menu js-clone-nav ml-auto">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item">
                                        <form method="post" asp-controller="AccountRegister" asp-action="Logout">
                                            <button type="submit" style="width:auto" class="nav-link btn btn-link py-0">
                                                Logout @User?.Identity?.Name
                                            </button>
                                        </form>
                                    </li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a href="@Url.Action("ProductX", "Product")" class="nav-link">Product</a></li>
                                    }
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Index", "Home")" class="nav-link">Home</a></li>
                                    <li class="nav-item dropdown">
                                        <a href="#" class="nav-link dropdown-toggle" id="servicesLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            მომსახურებები
                                        </a>
                                        <ul class="dropdown-menu" id="servicesDropdown" aria-labelledby="servicesLink">
                                            <li class="dropdown-item">
                                                <div class="service-1 dark">
                                                    <span class="service-1-icon">
                                                        <span class="flaticon-bald"></span>
                                                    </span>
                                                    <div class="service-1-contents">
                                                        <h3>თმის შეჭრა</h3>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="dropdown-item">
                                                <div class="service-1 dark">
                                                    <span class="service-1-icon">
                                                        <span class="flaticon-beard"></span>
                                                    </span>
                                                    <div class="service-1-contents">
                                                        <h3>სახისა და სხეულის მოვლა</h3>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="dropdown-item">
                                                <div class="service-1 dark">
                                                    <span class="service-1-icon">
                                                        <span class="flaticon-scissors"></span>
                                                    </span>
                                                    <div class="service-1-contents">
                                                        <h3>მასაჟი</h3>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                    <li><a href="@Url.Action("Privacy", "Home")" class="nav-link">About</a></li>
                                    <li><a href="@Url.Action("Register", "AccountRegister")" class="nav-link">Register</a></li>
                                    <li><a href="@Url.Action("Login", "Login")" class="nav-link">Login</a></li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </header>

        @if (!background_image)
        {
            <div class="ftco-blocks-cover-1">
                <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('/Templete_XX/images/hero_1.jpg')">
                    <div class="container">
                        <div class="row align-items-center justify-content-center text-center">
                            <div class="col-md-7">
                                <h1 class="mb-3">Register and book a visit</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!isLoginPage)
        {
            <!-- Additional content for non-login pages can go here -->
        }

        @if (Model != null && Model.Any() && !background_image)
        {
            <div class="product-ads">
                <div class="product-carousel">
                    <div class="product-container">
                        @foreach (var product in Model)
                        {
                            <div class="product-card">
                                <img src="data:@product.ContentType;base64,@Convert.ToBase64String(product.ImageData)" alt="@product.ProductName" class="product-image" />
                                <div class="product-info">
                                    <h3 class="product-name">@product.ProductName</h3>
                                    <p class="product-category">@product.ProductCategory</p>
                                    <p class="product-count">ხელმისაწვდომი რაოდენობა: @product.ProdutCount</p>
                                    <a href="@Url.Action("Buy", "Product", new { id = product.Id_Pr })" class="btn btn-primary">ყიდვა</a>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-button left">&#9664;</button>
                    <button class="carousel-button right">&#9654;</button>
                </div>
            </div>

        }
        else
        {
           @*  <p>No products available.</p> *@
        }



        <!-- Include JavaScript files -->
        <script src="~/Templete_XX/js/jquery-3.3.1.min.js"></script>
        <script src="~/Templete_XX/js/jquery-migrate-3.0.0.js"></script>
        <script src="~/Templete_XX/js/popper.min.js"></script>
        <script src="~/Templete_XX/js/bootstrap.min.js"></script>
        <script src="~/Templete_XX/js/owl.carousel.min.js"></script>
        <script src="~/Templete_XX/js/jquery.sticky.js"></script>
        <script src="~/Templete_XX/js/jquery.waypoints.min.js"></script>
        <script src="~/Templete_XX/js/jquery.animateNumber.min.js"></script>
        <script src="~/Templete_XX/js/jquery.fancybox.min.js"></script>
        <script src="~/Templete_XX/js/jquery.stellar.min.js"></script>
        <script src="~/Templete_XX/js/jquery.easing.1.3.js"></script>
        <script src="~/Templete_XX/js/bootstrap-datepicker.min.js"></script>
        <script src="~/Templete_XX/js/aos.js"></script>
        <script src="~/Templete_XX/js/main.js"></script>
        <script src="~/js/Services.js"></script>
        <script src="~/js/Product.js"></script>
        

        @RenderBody()
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
