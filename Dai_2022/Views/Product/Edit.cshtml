@using Application.Models_DB


@model ProductReqvestModel2
@* <link rel="stylesheet" href="~/css/product.css" /> *@
<form asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="mb-3 row p-1">
            <label asp-for="Id" class="p-0"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ProductCount" class="p-0"></label>
            <input asp-for="ProductCount" class="form-control" />
            <span asp-validation-for="ProductCount" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ProductName" class="p-0"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ProductCategoryName" class="p-0"></label>
            <input asp-for="ProductCategoryName" class="form-control" />
            <span asp-validation-for="ProductCategoryName" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="PhotoData" class="p-0"></label>
            <input asp-for="PhotoData" type="file" class="form-control" />
            <span asp-validation-for="PhotoData" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="" class="btn btn-secondary border form-control">Back</a>
            </div>
        </div>
    </div>
</form>
