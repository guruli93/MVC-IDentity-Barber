@model List<ProductResponseModel2>

@if (TempData["success"] != null)
{
    <h2 class="alert alert-success">@TempData["success"]</h2>
}
<link rel="stylesheet" href="~/css/product.css" />
<link rel="stylesheet" href="~/css/Image.css" />
<script src="~/js/Image.js"></script>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
       
    </div>

    <div class="row mt-3">
        <form asp-controller="Product" asp-action="Search" method="get" class="d-flex">
            <div class="input-group">
                <input type="text" id="searchString" name="searchString" class="form-control" placeholder="Search products..." aria-label="Search products" required />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
        <a asp-controller="Product" asp-action="Create" class="btn btn-success">
            <i class="bi bi-trash3-fill"></i> Create New Product
        </a>
    </div>

    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Count</th>
                <th>Category</th>
                <th>Name</th>
                <th>Image</th>
                <th>Actions Objects</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var list_product in Model)
            {
                <tr>
                    <td>@list_product.Id_Pr</td>
                    <td>@list_product.ProdutCount</td>
                    <td>@list_product.ProductCategory</td>
                    <td>@list_product.ProductName</td>
                    <td>




                        <img src="data:@list_product.ContentType;base64,@Convert.ToBase64String(list_product.ImageData)" alt="Product Image" style="width:100px; height:100px;" />


@*                         <img src="@Url.Action("DisplayImage", "Product", new { id = list_product.Id_Pr })" alt="Product Image" width="100" height="100" />
 *@                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <!-- სურათის ბმული -->
                          
                           @*  <a href="#" onclick="openImageModal('@Convert.ToBase64String(list_product.ImageData)', '@list_product.ContentType')" class="btn btn-info mx-2">View</a>

                            <!-- მოდალური ფანჯარა -->
                            <div id="imageModal" class="modal">
                                <span class="close" onclick="closeImageModal()">&times;</span>
                                <img id="modalImage" class="modal-content">
                            </div>
 *@


                            <a href="@Url.Action("DisplayImage", "Product", new { id = list_product.Id_Pr })" class="btn btn-info mx-2">View</a>
                           
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@list_product.Id_Pr" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@list_product.Id_Pr" class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to delete this product?');">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                           
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
