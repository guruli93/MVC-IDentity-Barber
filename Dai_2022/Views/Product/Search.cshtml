@model List<ProductResponseModel2>

@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
    

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                    <th>Product ID</th>
                    <th>Product Count</th>
                    <th>Product Category</th>
                    <th>Product Name</th>
                    <th>ImageData</th>
                    <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var list_product in Model)
            {
                <tr>
                    <td>@list_product.Id_Pr</td>
                    <td>@list_product.ProdutCount</td>
                    <td>@list_product.ProductCategory</td>
                    <td>@list_product.ProductName</td>
                    <td>
                          <img src="@Url.Action("DisplayImage", "Product", new { id = list_product.Id_Pr })" width="100" height="100" />
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                        <a href="@Url.Action("DisplayImage", "Product", new { id = list_product.Id_Pr })" class="btn btn-info mx-2">View</a>
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@list_product.Id_Pr" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@list_product.Id_Pr" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Product" asp-action="Product" class="btn btn-secondary border form-control">Back</a>
                                </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
